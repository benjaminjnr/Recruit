<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form>
                <div class="form-group">
					<h3>Personal Information</h3>
					<hr>
                    <div class="row">
                        <div class="col-md-6">
                            <label>First Name*</label>
							<input class="form-control" name="fname">
						</div>
						<div class="col-md-6">
                            <label>Last Name*</label>
							<input class="form-control" name="lname">
						</div>
					</div>
				</div>

				<div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Email Address*</label>
							<input class="form-control" name="email">
						</div>
						<div class="col-md-6">
                            <label>Phone Number*</label>
							<input class="form-control" name="phone">
						</div>
					</div>
				</div>

				<div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Current Location*</label>
							<select class="form-control" name="country">

							</select>
						</div>
						<div class="col-md-6">
                            <label>State*</label>
							<select class="form-control" name="state">

							</select>
						</div>
					</div>
				</div>

				<div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Date Of Birth*</label>
							<!--			insert here				-->
                        </div>
						<div class="col-md-6">
                            <label>Gender*</label>
							<select class="form-control" name="gender">
                                <option>Select A Gender</option>
								<option value="m">Male</option>
								<option value="f">Female</option>
							</select>
						</div>
					</div>
				</div>

				<div class="form-group">
                    <h3>PREFERRED JOBS</h3>
					<hr>

					<p class="small">This would determine the job categories you profile will be found under</p>

					<div class="row">
                        <div class="col-md-6">
                            <label>Specialization</label>
							<select class="form-control" name="specialization">
                                
							</select>
						</div>
						<div class="col-md-6">
                            <label>Level</label>
							<select class="form-control" name="level">

							</select>
						</div>
					</div>
				</div>

				<div class="form-group">
					<p class="small">
                        By proceeding to click <strong>Continue</strong>, you agree to our 
                        <a href="#terms" data-toggle="modal">Terms of Service</a> and 
                        <a href="#privacy" data-toggle="modal">Privacy Policy</a>. 
                    </p>
                    <div class="row">
						<div class="col-md-12">
							<div class="pull-right">
                                <button class="btn btn-primary">Continue</button>
                            <p class="small">Already have an account? Click here to <a href="@Url.RouteUrl("Sign In")">Sign In</a></p>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>